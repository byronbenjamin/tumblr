<div class="comment clearfix">
  <div class="comment_content">
    <p class="commnet_name"><strong><%= comment.name %></strong></p>
    <p class="commnet_body"><%= comment.body %></p>
    <p class="comment_title">About <%= time_ago_in_words(comment.created_at) %> Ago</p>
  </div>
  <% if user_signed_in? %>
    <p><%= link_to 'Delete', [comment.post, comment], method: :delete, class: 'button', data: { confirm: 'Are you sure?' } %></p>
  <% end %>
</div>